{
    "AdobeMediaEdge": {
        "enabled": "{context.enableAdobeMediaEdge}",
        "category": "video",
        "type": "restapi",
        "params": {
            "settings": {
                "datastreamId": "7f342689-f4d2-408e-a22c-1089010fd434",
                "uriHost": "{context.dev} ? https://edge.adobedc.net/ee-pre-prd : https://edge.adobedc.net/ee",
                "pingInterval": "10",
                "sessionTimeout": "6",
                "retrySessionInterval": "2"
            },
            "trackerCommands": {
                "debugLogging": "true",
                "sendUndefined": "false"
            },
            "playerStates": {
                "timeShifted": "true",
                "streamingFormatVideoColorRange": "true"
            },
            "eventList": {
                "Play": {
                    "path": "{settings.uriHost}/va/v1/play",
                    "schema": {
                        "events": [
                            {
                                "xdm": {
                                    "eventType": "media.play",
                                    "mediaCollection": {
                                        "sessionID": "{data.adobeEdgeSessionId}",
                                        "playhead": "{data.playhead}"
                                    },
                                    "timestamp": "{data.timestampISO}"
                                }
                            }
                        ]
                    }
                },
                "Pause": {
                    "path": "{settings.uriHost}/va/v1/pauseStart",
                    "schema": {
                        "events": [
                            {
                                "xdm": {
                                    "eventType": "media.pauseStart",
                                    "mediaCollection": {
                                        "sessionID": "{data.adobeEdgeSessionId}",
                                        "playhead": "{data.playhead}"
                                    },
                                    "timestamp": "{data.timestampISO}"
                                }
                            }
                        ]
                    }
                },
                "Heartbeat": {
                    "path": "{settings.uriHost}/va/v1/ping",
                    "schema": {
                        "events": [
                            {
                                "xdm": {
                                    "eventType": "media.ping",
                                    "mediaCollection": {
                                        "sessionID": "{data.adobeEdgeSessionId}",
                                        "playhead": "{data.playhead}"
                                    },
                                    "timestamp": "{data.timestampISO}"
                                }
                            }
                        ]
                    }
                },
                "BufferStart": {
                    "path": "{settings.uriHost}/va/v1/bufferStart",
                    "schema": {
                        "events": [
                            {
                                "xdm": {
                                    "eventType": "media.bufferStart",
                                    "mediaCollection": {
                                        "sessionID": "{data.adobeEdgeSessionId}",
                                        "playhead": "{data.playhead}"
                                    },
                                    "timestamp": "{data.timestampISO}"
                                }
                            }
                        ]
                    }
                },
                "AdBreakStart": {
                    "path": "{settings.uriHost}/va/v1/adBreakStart",
                    "schema": {
                        "events": [
                            {
                                "xdm": {
                                    "eventType": "media.adBreakStart",
                                    "mediaCollection": {
                                        "advertisingPodDetails": {
                                            "friendlyName": "{data.adModel.adPodTypeString}-roll",
                                            "index": "{data.adModel.podIndex}",
                                            "offset": "{data.adModel.adTimeOffset}"
                                        },
                                        "sessionID": "{data.adobeEdgeSessionId}",
                                        "playhead": "{data.playhead}"
                                    },
                                    "timestamp": "{data.timestampISO}"
                                }
                            }
                        ]
                    }
                },
                "AdBreakEnd": {
                    "path": "{settings.uriHost}/va/v1/adBreakComplete",
                    "schema": {
                        "events": [
                            {
                                "xdm": {
                                    "eventType": "media.adBreakComplete",
                                    "mediaCollection": {
                                        "sessionID": "{data.adobeEdgeSessionId}",
                                        "playhead": "{data.playhead}"
                                    },
                                    "timestamp": "{data.timestampISO}"
                                }
                            }
                        ]
                    }
                },
                "AdStart": {
                    "path": "{settings.uriHost}/va/v1/adStart",
                    "schema": {
                        "events": [
                            {
                                "xdm": {
                                    "eventType": "media.adStart",
                                    "mediaCollection": {
                                        "advertisingDetails": {
                                            "friendlyName": "{data.adModel.adPodTypeString} || n/a",
                                            "name": "{data.adModel.adTitle} || n/a",
                                            "length": "{data.adModel.adDuration} || 5",
                                            "advertiser": "{data.playhead} - {data.adobeEdgeSessionId} - advertiser name - {context.hello}",
                                            "campaignID": "{data.adModel.adID} || n/a",
                                            "creativeID": "{data.adModel.creativeId} || n/a",
                                            "creativeURL": "{data.adModel.adURLString} || http://www.paramount.com",
                                            "placementID": "{context.placementID} || n/a",
                                            "siteID": "{context.siteId} || n/a",
                                            "podPosition": "{data.adModel.adPositionInPod} || 0",
                                            "playerName": "{data.playerName}"
                                        },
                                        "customMetadata": [
                                            {
                                                "name": "myCustomValue3",
                                                "value": "c3"
                                            }
                                        ],
                                        "sessionID": "{data.adobeEdgeSessionId}",
                                        "playhead": "{data.playhead}"
                                    },
                                    "timestamp": "{data.timestampISO}"
                                }
                            }
                        ]
                    }
                },
                "AdPause": {
                    "path": "{settings.uriHost}/va/v1/pauseStart",
                    "schema": {
                        "events": [
                            {
                                "xdm": {
                                    "eventType": "media.pauseStart",
                                    "mediaCollection": {
                                        "sessionID": "{data.adobeEdgeSessionId}",
                                        "playhead": "{data.playhead}"
                                    },
                                    "timestamp": "{data.timestampISO}"
                                }
                            }
                        ]
                    }
                },
                "AdEnd": {
                    "path": "{settings.uriHost}/va/v1/adComplete",
                    "schema": {
                        "events": [
                            {
                                "xdm": {
                                    "eventType": "media.adComplete",
                                    "mediaCollection": {
                                        "sessionID": "{data.adobeEdgeSessionId}",
                                        "playhead": "{data.playhead}"
                                    },
                                    "timestamp": "{data.timestampISO}"
                                }
                            }
                        ]
                    }
                },
                "Error": {
                    "path": "{settings.uriHost}/va/v1/error",
                    "schema": {
                        "events": [
                            {
                                "xdm": {
                                    "eventType": "media.error",
                                    "mediaCollection": {
                                        "sessionID": "{data.adobeEdgeSessionId}",
                                        "playhead": "{data.playhead}",
                                        "qoeDataDetails": {
                                            "bitrate": "{data.bitrate}",
                                            "droppedFrames": "{data.droppedFrames}"
                                        },
                                        "errorDetails": {
                                            "name": "{data.cvpErrorCode} - {data.cvpError}",
                                            "source": "player"
                                        }
                                    },
                                    "timestamp": "{data.timestampISO}"
                                }
                            }
                        ]
                    }
                },
                "FatalError": {
                    "path": "{settings.uriHost}/va/v1/error",
                    "schema": {
                        "events": [
                            {
                                "xdm": {
                                    "eventType": "media.error",
                                    "mediaCollection": {
                                        "sessionID": "{data.adobeEdgeSessionId}",
                                        "playhead": "{data.playhead}",
                                        "qoeDataDetails": {
                                            "bitrate": "{data.bitrate}",
                                            "droppedFrames": "{data.droppedFrames}"
                                        },
                                        "errorDetails": {
                                            "name": "{data.cvpErrorCode} - {data.cvpError}",
                                            "source": "player"
                                        }
                                    },
                                    "timestamp": "{data.timestampISO}"
                                }
                            }
                        ]
                    }
                },
                "SessionStart": {
                    "path": "{settings.uriHost}/va/v1/sessionStart",
                    "schema": {
                        "events": [
                            {
                                "xdm": {
                                    "eventType": "media.sessionStart",
                                    "mediaCollection": {
                                        "sessionDetails": {
                                            "name": "title",
                                            "playerName": "{data.playerName}",
                                            "contentType": "{data.isLive} ? Live : VOD",
                                            "length": "{data.isLive} ? 86400 : {context.mediaDuration}",
                                            "channel": "{context.channelName}",
                                            "appVersion": "{context.appVersion}"
                                        },
                                        "playhead": "{data.playhead}"
                                    },
                                    "timestamp": "{data.timestampISO}"
                                }
                            }
                        ]
                    }
                },
                "SessionEnd": {
                    "path": "{settings.uriHost}/va/v1/sessionEnd",
                    "schema": {
                        "events": [
                            {
                                "xdm": {
                                    "eventType": "media.sessionEnd",
                                    "mediaCollection": {
                                        "sessionID": "{data.adobeEdgeSessionId}",
                                        "playhead": "{data.playhead}"
                                    },
                                    "timestamp": "{data.timestampISO}"
                                }
                            }
                        ]
                    }
                },
                "SessionComplete": {
                    "path": "{settings.uriHost}/va/v1/sessionComplete",
                    "schema": {
                        "events": [
                            {
                                "xdm": {
                                    "eventType": "media.sessionComplete",
                                    "mediaCollection": {
                                        "sessionID": "{data.adobeEdgeSessionId}",
                                        "playhead": "{data.playhead}"
                                    },
                                    "timestamp": "{data.timestampISO}"
                                }
                            }
                        ]
                    }
                },
                "StatesUpdate": {
                    "path": "{settings.uriHost}/va/v1/statesUpdate",
                    "schema": {
                        "events": [
                            {
                                "xdm": {
                                    "eventType": "media.statesUpdate",
                                    "mediaCollection": {
                                        "sessionID": "{data.adobeEdgeSessionId}",
                                        "playhead": "{data.playhead}",
                                        "statesStart": "{context.inbuilt.statesStarted}",
                                        "statesEnd": "{context.inbuilt.statesEnded}"
                                    },
                                    "timestamp": "{data.timestampISO}"
                                }
                            }
                        ]
                    }
                }
            },
            "dataType": {
                "debugLogging": "boolean",
                "sendUndefined": "boolean",
                "pingInterval": "int",
                "retrySessionInterval": "int",
                "playhead": "int",
                "length": "int",
                "sessionTimeout": "float",
                "playheadTimeout": "float",
                "timeShifted": "boolean",
                "timeShiftedAd": "boolean",
                "offset": "int"
            }
        }
    }
}
