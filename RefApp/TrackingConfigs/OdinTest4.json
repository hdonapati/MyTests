{
   "Odin": {
      "enabled": true,
      "category": "app",
      "config": {
         "namespace": "appTracker",
         "endPoint": "https://sp.staging.pluto.tv/com.snowplowanalytics.snowplow/tp2",
         "retryNum": 3,
         "retryWaitTime": 30,
         "debugLogging": true,
         "base64encoding": false,
         "sessionContext": true,
         "platformContext": true,
         "lifecycleAutotracking": true,
         "screenViewAutotracking": true,
         "screenContext": true,
         "applicationContext": true,
         "expectionAutotracking": true,
         "installAutotracking": true,
         "userAnonymisation": false
      },
      "dataMappings": {
         "default": {
            "payload": {
               "appName": "{context.appName}",
               "appVersion": "{context.appVersion}",
               "channelID": "{context.channelID}",
               "carrierName": "{context.carrierName}",
               "clientDeviceType": "{context.clientDeviceType}",
               "clientFirmware": "{data.clientOS}",
               "clientID": "{data.clientID}",
               "clientLanguage": "{context.clientLanguage}",
               "clientManufacturer": "{data.deviceManufacturer}",
               "clientModelName": "{data.deviceModelName}",
               "clientModelNumber": "{data.deviceModelNumber}",
               "clientNetworkType": "{data.deviceNetworkType}",
               "clientOS": "{data.clientOS}",
               "clientPrivateIP": "{data.localIP}",
               "eventGeneratorIP": "{data.externalIP}",
               "clientScreenResolution": "{data.displayResolution}",
               "cmAudienceID": "{context.cmAudienceID}",
               "environment": "{context.OdinEnv}",
               "episodeID": "{eventData.sp.episodeID}",
               "episodeTimelinePoint": "{eventData.sp.episodeTimelinePoint}",
               "eventCategory": "{eventData.sp.eventCategory}",
               "eventEmitterType": "{eventData.sp.eventEmitterType}",
               "eventGeneratorType": "{eventData.sp.eventGeneratorType}",
               "eventName": "{eventData.sp.eventName}",
               "eventOccurredTimestamp": "{eventData.sp.eventOccurredTimestamp}",
               "featureTypeExtension": {
                  "data": {
                     "featureTypeId": "{eventData.sp.featureTypeIdArr}"
                  },
                  "ver": "{eventData.sp.featureTypeExtensionVersion}"
               },
               "hitID": "{eventData.sp.hitID}",
               "isClientDNT": "{eventData.sp.isClientDNT}",
               "kidsConstrained": "{eventData.sp.kidsConstrained}",
               "playbackState": "{eventData.sp.playbackState}",
               "playerHeight": "{data.displayHeight}",
               "playerWidth": "{data.displayWidth}",
               "playerName": "{context.useAppPlayerName} ? {context.playerName} : {data.playerName}",
               "playerVersion": "{context.useAppPlayerVersion} ? {context.playerVersion} : {data.playerVersion}",
               "programTimelineID": "{eventData.sp.programTimelineID}",
               "screenOrientation": "landscape",
               "section": "{eventData.sp.section}",
               "sessionID": "{eventData.sp.sessionID}",
               "testGroupID": "{eventData.sp.testGroupID}",
               "testID": "{eventData.sp.testID}"
            },
            "schema": "iglu:com.plutotv/pluto_events/jsonschema/1-0-0"
         },
         "eventTrackMe": {
            "payload": {},
            "schema": "iglu:com.plutotv/pluto_events/jsonschema/1-0-0"
         }
      }
   }
}
